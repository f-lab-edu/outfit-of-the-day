<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <timestamp key="DATE" datePattern="yyyy-MM-dd"/>
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss}:%-4relative | %green([%thread]) | %highlight(%-5level) | %boldWhite(%C.%M:%yellow(%L)) | %cyan(%msg%n)"/>
    <property name="FILE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss}:%-4relative | [%thread] | %-5level | %C.%M:%L | %msg%n"/>
    <property name="LOG_PATH" value="./logs"/>
    <property name="BACKUP_PATH" value="./logs/backup"/>
    <property name="MAX_FILE_SIZE" value="100MB"/>
    <property name="MAX_HISTORY" value="30"/>

    <springProfile name="local|test">
        <include resource="appender/console-appender.xml"/>
        <logger name="org.springframework" level="INFO">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="dev">
        <include resource="appender/file-appender.xml"/>

        <logger name="org.springframework" level="INFO">
            <appender-ref ref="FILE"/>
        </logger>
        <root level="INFO">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <include resource="appender/file-appender.xml"/>
        
        <root level="ERROR">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>